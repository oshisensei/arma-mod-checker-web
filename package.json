{
  "name": "arma-reforger-mod-checker",
  "version": "1.0.0",
  "description": "Web app to check Arma Reforger mod versions",
  "main": "index.html",
  "type": "module",
  "scripts": {
    "start": "node server.js",
    "dev": "node server.js",
    "vercel-dev": "vercel dev",
    "build": "mkdir -p dist && cp index.html dist/ && echo 'Build completed'",
    "deploy": "vercel --prod",
    "dev:mock": "node scripts/dev-mock.js",
    "dev:real": "node scripts/dev-real.js"
  },
  "dependencies": {
    "axios": "^1.6.2",
    "cheerio": "^1.0.0-rc.12",
    "express": "^4.18.2",
    "cors": "^2.8.5"
  },
  "devDependencies": {
    "@types/node": "^20.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "keywords": [
    "arma",
    "reforger",
    "mods",
    "version-check",
    "webapp"
